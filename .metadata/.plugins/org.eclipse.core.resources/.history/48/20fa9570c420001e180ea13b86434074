package atm;
import java.util.Scanner;

public class atm {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Client client = new Client();
		Scanner scan = new Scanner(System.in);
		int input = 0;
		int code = client.getCode();
		System.out.println("Bienvenu sur votre ATM virtuel");
		
		
		
		do {
			System.out.println("Entrez votre code client: ");
			try {
				
				input = scan.nextInt();
				
				
				if(input == code) {
					System.out.println("Vous etes bien connecte sur votre compte, " + client.getName() + " !");
					System.out.println("Que voulez-vous faire ?");
				}
				
			} catch (java.util.InputMismatchException e ) {
				System.out.println("Veuillez saisir des nombres!");
			}
			
			

		} while (input != code);
		
		
		
		
		
		
	}

}
